<h1>New Part</h1>

<%= form_for [@car, @part] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :part_number %>
  <%= f.text_field :part_number %>

  <%= f.label :manufacturer %>
  <%= f.text_field :manufacturer %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Create Part" %>
<% end %>

<%= link_to "Back to Parts", parts_path %>